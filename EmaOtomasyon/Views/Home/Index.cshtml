@{
    ViewData["Title"] = "Anasayfa";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anasayfa</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .containerHome {
            margin-top: 1rem;
            margin-bottom: 1rem;
        }

        .button-containerHome {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .custom-button {
            width: calc(20% - 1rem); /* 25% genişlik, 1rem boşluk */
            height: 20rem;
            font-size: 1.5rem;
            margin-bottom: 2rem;
        }

        @@media (max-width: 1200px) {
            .custom-button {
                width: calc(25% - 1rem); /* 50% genişlik, 20px boşluk */
                height: 15rem;
                font-size: 1rem;
                margin-bottom: 1rem;
            }
        }

        @@media (max-width: 768px) {
            .custom-button {
                width: calc(50% - 1rem); /* 50% genişlik, 20px boşluk */
                height: 10rem;
                font-size: 1rem;
                margin-bottom: 1rem;
            }
        }

        @@media (max-width: 204px) {
            .custom-button {
                width: calc(100% - 1rem); /* 50% genişlik, 20px boşluk */
                height: 3rem;
                font-size: 1rem;
                margin-bottom: 1rem;
            }
        }

    </style>
</head>
<body>

    <div class="containerHome">
        <div class="button-containerHome">
            <button class="btn btn-primary custom-button" onclick="navigateToIndex('Company')">Şirketler</button>
            <button class="btn btn-success custom-button" onclick="navigateToIndex('Customer')">Müşteriler</button>
            <button class="btn btn-warning custom-button" onclick="navigateToIndex('Invoices')">Faturalar</button>
            <button class="btn btn-danger custom-button" onclick="navigateToIndex('Products')">Ürünlerim</button>
            <button class="btn btn-info custom-button" onclick="navigateToIndex('Company')">Belgeler</button>
            <button class="btn btn-primary custom-button" onclick="navigateTo('Company','AddCompany')">Şirket Ekle</button>
            <button class="btn btn-success custom-button" onclick="navigateTo('Customer','AddCustomer')">Müşteri Ekle</button>
            <button class="btn btn-warning custom-button" onclick="navigateTo('Invoices','AddInvoice')">Fatura Ekle</button>
            <button class="btn btn-danger custom-button" onclick="navigateTo('Products','AddProduct')">Ürün Ekle</button>
            <button class="btn btn-info custom-button" onclick="navigateTo('Company')">Belgeler</button>
            <button class="btn btn-primary custom-button" onclick="navigateTo('Company')">Şirketler</button>
            <button class="btn btn-success custom-button" onclick="navigateTo('Customer')">Müşteriler</button>
            <button class="btn btn-warning custom-button" onclick="navigateTo('Invoices')">Faturalar</button>
            <button class="btn btn-danger custom-button" onclick="navigateTo('Products')">Ürünlerim</button>
            <button class="btn btn-info custom-button" onclick="navigateTo('Company')">Belgeler</button>
            
        </div>
    </div>

    <!-- Bootstrap JS ve Popper.js (Opsiyonel, modal ve dropdown için gerekli) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function navigateToIndex(category) {
            window.location.href = '/' + category + '/Index';
        }
        function navigateTo(category, viewName) {
            window.location.href = '/' + category + '/' + viewName;
        }
    </script>
</body>
</html>
