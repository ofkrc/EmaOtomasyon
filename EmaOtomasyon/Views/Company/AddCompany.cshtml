@{
    Layout = "_TableViewLayout";
}

@model EmaOtomasyon.Models.Company.Response.CompanyResponseModel

@{
    ViewData["Title"] = "Şirket Ekle";
}

<div class="container">
    <br />
    <h2>Şirket Ekleme Ekranı</h2>
    <h6>Uyarı: Şirket Oluşturmadıysanız lütfen daha önce şirket oluşturunuz!</h6>
    <form asp-action="AddCompany" method="post" enctype="multipart/form-data">
        <!-- Form içeriği buraya gelecek -->
        <div class="form-group">
            <label for="CompanyName">Şirket Adı:</label>
            <input type="text" class="form-control" id="CompanyName" name="CompanyName" required>
        </div>
        <div class="form-group">
            <label for="Address">Adres:</label>
            <textarea class="form-control" id="Address" name="Address"></textarea>
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="text" class="form-control" id="Email" name="Email" required>
        </div>
        <div class="form-group">
            <label for="PurchasePrice">Telefon Numarası:</label>
            <input type="number" class="form-control" id="PhoneNumber" name="PhoneNumber" required>
        </div>
        <div class="form-group">
            <label for="Website">Web Sitesi:</label>
            <input type="text" class="form-control" id="Website" name="Website" required>
        </div>
        <div class="form-group">
            <label for="TaxOffice">Vergi Adresi:</label>
            <input type="text" class="form-control" id="TaxOffice" name="TaxOffice" required>
        </div>
        <div class="form-group">
            <label for="TaxNo">Vergi Numarası:</label>
            <input type="number" class="form-control" id="TaxNo" name="TaxNo" required>
        </div>

        <button type="submit" class="btn btn-primary">Şirket Ekle</button>
    </form>
</div>