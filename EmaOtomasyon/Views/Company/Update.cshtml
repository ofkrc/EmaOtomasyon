@{
    Layout = "_TableViewLayout";
}

@model EmaOtomasyon.Models.Company.Response.CompanyResponseModel

@{
    ViewData["Title"] = "Update Company";
}

<div class="container mt-5">
    @if (Model != null)
    {
        <form id="CompanyForm" asp-action="Update" asp-controller="Company" method="post" class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <label for="CompanyName" class="font-weight-bold">Ad</label>
                    <input type="text" class="form-control" id="CompanyName" name="CompanyName" value="@Model.CompanyName" />
                </div>
                <div class="form-group">
                    <label for="Email" class="font-weight-bold">Email</label>
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" />
                </div>
                <div class="form-group">
                    <label for="Address" class="font-weight-bold">Adres</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="TaxOffice" class="font-weight-bold">Vergi Adresi</label>
                    <input type="text" class="form-control" id="TaxOffice" name="TaxOffice" value="@Model.TaxOffice" />
                </div>
                <div class="form-group">
                    <label for="TaxNo" class="font-weight-bold">Vergi Numarası</label>
                    <input type="text" class="form-control" id="TaxNo" name="TaxNo" value="@Model.TaxNo" />
                </div>
                <div class="form-group">
                    <label for="Website" class="font-weight-bold">Web Sitesi</label>
                    <input type="text" class="form-control" id="Website" name="Website" value="@Model.Website" />
                </div>
            </div>

            <div class="col-md-6">

                <div class="form-group">
                    <label for="PhoneNumber" class="font-weight-bold">Telefon Numarası</label>
                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
                </div>
                <div class="form-group">
                    <label for="Status" class="font-weight-bold">Durum</label>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="Active" name="Status" value="true" @(Model != null && Model.Status.HasValue && Model.Status.Value ? "checked" : "") />
                        <label class="form-check-label font-weight-bold" for="Active">Aktif</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="Inactive" name="Status" value="false" @(Model != null && Model.Status.HasValue && !Model.Status.Value ? "checked" : "") />
                        <label class="form-check-label font-weight-bold" for="Inactive">Pasif</label>
                    </div>
                </div>
            </div>

            <!-- Hidden fields -->
            <input type="hidden" id="recordId" name="recordId" value="@Model.RecordId" />
            <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
            <input type="hidden" id="Deleted" name="Deleted" value="@Model.Deleted" />

            <div class="col-12">
                <button type="submit" class="btn btn-primary" name="action" value="update">Kaydet</button>
            </div>
        </form>
    }
    else
    {
        <p>Veri bulunamadı.</p>
    }
</div>
