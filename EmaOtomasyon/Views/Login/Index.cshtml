@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="/css/Login/styles.css">
    <!-- Add the following line to include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS ve Popper.js (Opsiyonel, modal ve dropdown için gerekli) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tektur&display=swap" rel="stylesheet">

</head>
<body>
    
    <section class="vh-100" style="background-color: #8c52ff;">
        <div class="container py-5 h-100" style="font-family: 'Tektur', sans-serif;">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem; border-color:#8c52ff;">
                        <div class="row g-0">

                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="/images/ema-otomasyon.png"
                                     alt="login form" class="img-fluid"/>
                            </div>

                            <div class="col-md-6 col-lg-7 d-flex align-items-center" style="background-color:#8c52ff;">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="get" action="/User/Login">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <span class="h1 fw-bold mb-0">Hoş Geldiniz</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Hesabınızda oturum açın</h5>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example17">Email</label>
                                            <input type="email" id="form2Example17" class="form-control form-control-lg" />                                           
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example27">Şifre</label>
                                            <input type="password" id="form2Example27" class="form-control form-control-lg" />                                           
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="button">Giriş Yap</button>
                                        </div>

                                       @*  <a class="small text-muted" href="#!">Şifreni mi unuttun?</a> *@
                                        @* <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Don't have an account? <a href="#!"
                                                                      style="color: #393f81;">Register here</a>
                                        </p> *@
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="js/Login/script.js"></script>
</body>
</html>

